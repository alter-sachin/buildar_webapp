{
	"extends": ["standard", "eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"rules": {
		"quotes": [2, "double"],
		"semi": [1, "always"],
		"space-before-function-paren": [1, "never"],
		"code": false,
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"no-tabs": 0
	},
	"globals": {
		"fetch": false
	}
}
